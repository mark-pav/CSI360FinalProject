<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/order_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_discr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/order_image"
        app:layout_constraintStart_toEndOf="@+id/order_image"
        app:layout_constraintTop_toTopOf="@+id/order_image"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/order_image"
        app:layout_constraintStart_toEndOf="@+id/order_discr"
        app:layout_constraintTop_toTopOf="@+id/order_image"
        android:layout_marginStart="8dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_amount"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/order_image"
        app:layout_constraintStart_toEndOf="@+id/order_price"
        app:layout_constraintTop_toTopOf="@+id/order_image"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_total_tv"
        android:textSize="8dp"
        android:text="Total:"
        app:layout_constraintBottom_toBottomOf="@+id/order_image"
        app:layout_constraintEnd_toStartOf="@id/order_item_total"
        app:layout_constraintTop_toTopOf="@+id/order_image"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/order_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/order_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_image"
        android:layout_marginEnd="15dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>